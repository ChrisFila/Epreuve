{% extends "base.html.twig" %}

{% block body %}
	<div>
		<form name="rapport" method="post" action="#">
			<h1>
				Rapport de visite
			</h1>
			<div class="cr-input-title">
				<label class="titre">NUMERO :</label><input type="text" size="10" name="RAP_NUM" class="zone"/></div>
			<div class="cr-input-title">
				<label class="titre">DATE VISITE :</label><input type="text" size="10" name="RAP_DATEVISITE" class="zone"/></div>
			<div class="cr-input-title">
				<label class="titre">PRATICIEN :</label>
				<select name="PRA_NUM" class="zone"></select>
			</div>
			<div class="cr-input-title">
				<label class="titre">COEFFICIENT :</label><input type="text" size="6" name="PRA_COEFF" class="zone"/></div>
			<div class="cr-input-title">
				<label class="titre">REMPLACANT :</label><input type="checkbox" class="zone" checked="false" onclick="selectionne(true,this.checked,'PRA_REMPLACANT');"/><select name="PRA_REMPLACANT" disabled="disabled" class="zone"></select>
			</div>
			<div class="cr-input-title">
				<label class="titre">DATE :</label><input type="text" size="19" name="RAP_DATE" class="zone"/></div>
			<div class="cr-input-title">
				<label class="titre">MOTIF :</label>
				<select name="RAP_MOTIF" class="zone" onclick="selectionne('AUT',this.value,'RAP_MOTIFAUTRE');">
					<option value="PRD">Périodicité</option>
					<option value="ACT">Actualisation</option>
					<option value="REL">Relance</option>
					<option value="SOL">Sollicitation praticien</option>
					<option value="AUT">Autre</option>
				</select><input type="text" name="RAP_MOTIFAUTRE" class="zone" disabled="disabled"/></div>
			<div class="cr-input-title">
				<label class="titre">BILAN :</label>
				<textarea rows="5" cols="50" name="RAP_BILAN" class="zone"></textarea>
			</div>

			<label class="titre">
				<h3>
					Eléments présentés
				</h3>
				<div class="cr-input-title">
					<label class="titre">PRODUIT 1 :
					</label>
					<select name="PROD1" class="zone"></select>
				</div>
				<div class="cr-input-title">
					<label class="titre">PRODUIT 2 :
					</label>
					<select name="PROD2" class="zone"></select>
				</div>
				<div class="cr-input-title">
					<label class="titre">DOCUMENTATION OFFERTE :</label><input name="RAP_DOC" type="checkbox" class="zone" checked="false"/></div>
			</label>

			<label class="titre">
				<h3>Echanitllons</h3>
			</label>

			<div class="cr-input-title">
				<label class="titre">Produit :
				</label>
				<select name="PRA_ECH1" class="zone">
					<option>Produits</option>
				</select><input type="text" name="PRA_QTE1" size="2" class="zone"/></div>
			<div class="cr-input-title">
				<label class="titre">SAISIE DEFINITIVE :</label><input name="RAP_LOCK" type="checkbox" class="zone" checked="false"/>
				<label class="titre"></label>
			</div>


			<div class="titre" id="lignes">

				<input type="button" id="but1" value="+" onclick="ajoutLigne(1);" class="zone"/>
			</div>
		</form>
	</div>
{% endblock %}
